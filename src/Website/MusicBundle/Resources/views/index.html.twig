{% extends '::base.html.twig' %}

{% block title %} Musique {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/musics/music.css') }}" />
{% endblock %}

{% block body %}
    <h2>Liste de toutes les musiques</h2>
    <div class="form-group row col-md-6">
        <div class="col-md-8">
            <input type="text" placeholder="Album/Artiste" class="search-artiste form-control">
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary filter">Filtrer</button>
        </div>
    </div>
    <div class="content-table">
        <table id="table-musics" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead >
            <th>idArtiste</th>
            <th>Artiste</th>
            <th>Album</th>
            <th>idArtiste</th>
            </thead>
        </table>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/musics/music.js') }}"></script>
    <script>
        $(document).ready(function () {
            musics.init($('#table-musics'));
        });
    </script>
{% endblock %}