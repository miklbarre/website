{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/movies/movies.css') }}" />
{% endblock %}
{% block title %}Films{% endblock %}

{% block body %}
    <h2>Liste de tous les films</h2>

    <div>
        <div class="content-table ">
            <table id="table-movies" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <th>Id</th>
                <th>Titre</th>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/movies/movies.js') }}"></script>
    <script>
        $(document).ready(function () {
            movies.init($('#table-movies'));
        });
    </script>
{% endblock %}